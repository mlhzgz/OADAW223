{
    "compilerOptions": {
        "target": "ES5", // motor de JS objetivo de la compilación
        "module": "CommonJS", // conjunto de instrucciones para la compilación
        "sourceMap": true, // indica si se deben crear ficheros de mapa (para intellisense)
        "outDir": "./out" // para que funcione debe compilarse en batch usando sólo "tsc"
        ,"strict": true // indicamos que TS se ejecute de forma estricta
    }
}